using System.Diagnostics.CodeAnalysis;

double budget = int.Parse(Console.ReadLine());
double towelPrice = double.Parse(Console.ReadLine());
double discount = int.Parse(Console.ReadLine());
double umbrella = towelPrice * 2 / 3;
double flipFlops = umbrella * 0.75;
double bag = (towelPrice + flipFlops) * 1 / 3;
double discount1 = 1 - discount / 100;
double sum = (towelPrice + umbrella + bag + flipFlops) * discount1;

if(budget > sum)
{
    budget -= sum;
    Console.WriteLine($"Total sum is {sum:F2} lv. He has {budget:F2} lv left");
}
else
{
    Console.WriteLine($"Total sum is {sum:F2} lv. He needs {sum - budget:F2} lv. more.");
}
